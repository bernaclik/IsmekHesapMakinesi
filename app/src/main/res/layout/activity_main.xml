<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.celik.hesapmakinesi.MainActivity">

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:onClick="toplam"
        android:id="@+id/topla"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yuzde"
        android:layout_alignLeft="@+id/yuzde"
        android:onClick="carpma"
        android:layout_alignStart="@+id/yuzde"
        android:layout_marginTop="41dp"
        android:id="@+id/carp" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carp"
        android:layout_alignLeft="@+id/carp"
        android:layout_alignStart="@+id/carp"
        android:onClick="bolme"
        android:layout_marginTop="44dp"
        android:id="@+id/bol" />

    <Button
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/yuzde"
        android:layout_below="@+id/cikar"
        android:onClick="yuzdeal"
        android:layout_alignLeft="@+id/cikar"
        android:layout_alignStart="@+id/cikar" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cikar"
        android:onClick="cikarma"
        android:layout_below="@+id/topla"
        android:layout_alignLeft="@+id/topla"
        android:layout_alignStart="@+id/topla"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="Sonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:id="@+id/sonuc"
        android:layout_alignBottom="@+id/bol"
        android:layout_alignRight="@+id/sayi2"
        android:layout_alignEnd="@+id/sayi2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/sayi2"
        android:layout_alignBaseline="@+id/yuzde"
        android:layout_alignBottom="@+id/yuzde"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/sayi1"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/cikar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
